if [ x$1 != x ]; then
UNAME=$1
else
UNAME=`uname`
fi

case ${UNAME} in
FreeBSD | Darwin | OpenBSD)
	echo "${UNAME} system - use FreeBSD Makefile."
	cp Makefile.FreeBSD Makefile
	echo "Configuration completed."
        ;;
Linux | SunOS)
	echo "${UNAME} system - use Linux Makefile."
	echo UNAME=${UNAME} > Makefile
	cat Makefile.Linux >> Makefile
	echo "Configuration completed."
	;;
*)
	echo ""
	echo "Unknown system: ${UNAME}."
	echo "You must specify the system which you want to compile for:"
	echo ""
	echo "./configure FreeBSD               FreeBSD"
	echo "./configure OpenBSD               OpenBSD"
	echo "./configure Darwin                Darwin/Mac OS X"
	echo "./configure Linux                 Linux"
	echo "./configure SunOS                 SunOS/Solaris"
	echo "or"
	echo "./configure                       for auto configure"
	echo ""
	echo "Other systems not supported yet."
	echo ""
        ;;
esac
